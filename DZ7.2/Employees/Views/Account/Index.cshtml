<h3>Login</h3>
<span>@ViewBag.msg</span>
<form asp-action="login"  asp-controller="account" method="post">
    <span>Username</span>
    <input type="text" name="username">
    <br>
    <span>Password</span>
    <input type="password" name="password">
    <br>
    <input type="submit" value="Login">
</form>