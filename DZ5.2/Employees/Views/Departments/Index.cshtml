@model IEnumerable<Employees.Models.Department>

@{
    ViewData["Title"] = "Pregled odjela";
    ViewBag.Current = "Departments";
}

<h1>Pregled odjela</h1>

<p>
    <a asp-action="Create">Dodaj novi</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DeptName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DeptName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DeptNo">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DeptNo">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DeptNo">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
